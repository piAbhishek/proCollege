<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="#BEFFF9">
    <!--text view for heading-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/idHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="Welcome to proCollege \n Login Credentials"
                android:textAlignment="center"
                android:textColor="@color/purple_700"
                android:textSize="20sp" />

            <!--edit text for user name-->
            <EditText
                android:id="@+id/idEditUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/idHeader"
                android:layout_marginStart="10dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="10dp"
                android:hint="Enter UserName"
                android:inputType="textEmailAddress" />

            <!--edit text for user password-->
            <EditText
                android:id="@+id/idEditPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/idEditUserName"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:hint="Enter Password"
                android:inputType="textPassword" />

            <!--button to register our new user-->
            <Button
                android:id="@+id/idLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/idEditPassword"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:text="Login"
                android:textStyle="bold"
                android:textAllCaps="false" />

            <ImageView
                android:id="@+id/logo"
                android:layout_width="198dp"
                android:layout_height="228dp"
                android:layout_below="@+id/idLogin"
                android:layout_marginTop="14dp"
                android:src="@drawable/citlogo"
                android:layout_centerHorizontal="true"/>

            <Button
                android:id="@+id/create_account_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Account"
                android:textAllCaps="false"
                android:layout_below="@+id/logo"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="30dp"/>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>